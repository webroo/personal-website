@import 'nib';

global-reset();
reset-html5();

$siteWidth = 700px;
$sitePadding = 40px;

$bodyFontSize = 15px;
$bodyTitleFontSize = 36px;
$bodySubTitleFontSize = 26px;
$codeFontSize = 13px;
$bodyLineHeight = 1.6em;

$headerBgColor = #789;
$headerTextColor = #FFF;
$headerAnchorColor = #FFF;
$headerAnchorColorHover = #345;

$bodyTextColor = #444;
$bodyTitleTextColor = #000;
$bodySubTitleTextColor = #000;
$bodyAnchorColor = #757575;
$bodyAnchorColorHover = #3e90dd;

html {
  -webkit-text-size-adjust: 100%;
  -webkit-overflow-scrolling: touch;
}

body {
  font-family: Helvetica, Arial, sans-serif;
  font-size: $bodyFontSize;
  color: $bodyTextColor;
}

h1, h2 {
  font-family: Dosis, Helvetica, Arial, sans-serif;
}

p {
  line-height: $bodyLineHeight;
  margin-top: 1.5em;
}

blockquote {
  font-family: Georgia;
  font-style: italic;
  margin-left: 20px;
}

strong {
  font-weight: bold;
}

em {
  font-style: italic;
}

hr {
  margin: 30px 0 60px 0;
  height: 1px;
  border: none;
  background: #eaeaea;
}

td {
  vertical-align: top;
}

pre {
  margin-top: 22px;
}

code {
  font-family: Menlo, Consolas, Courier, monospace;
  font-size: $codeFontSize;
  margin: 0 2px;
  padding: 0px 5px;
  border: 1px solid #eaeaea;
  border-radius: 3px;
  background-color: #f8f8f8;
}

.central-content {
  margin: auto;
  max-width: $siteWidth;
  padding: 0 $sitePadding;
}

header {
  background: $headerBgColor;
  color: $headerTextColor;
  padding-top: 22px;

  h1 {
    font-size: 68px;
    margin-left: -3px;
  }

  h2 {
    font-size: 30px;
    margin-bottom: 0.3em;
  }

  nav {
    border-top: 1px solid rgba(255, 255, 255, 0.7);
    margin-top: 20px;
    padding-left: 1px;
  }

  li {
    display: inline-block;
    margin-right: 30px;
    height: 43px;
    font-size: 13px;
    line-height: 44px;

    &:last-child {
      margin-right: 0;
    }
  }

  a {
    color: $headerAnchorColor;
    display: block;
    text-decoration: none;
    text-transform: uppercase;

    &:hover {
      text-decoration: underline;
    }
  }
}

section#main {
  margin-top: 50px;
  margin-bottom: 52px;

  h1 {
    color: $bodyTitleTextColor;
    font-size: $bodyTitleFontSize;
    margin-top: 50px;

    a {
      color: $bodyTitleTextColor;
      text-decoration: none;
    }

    &:first-child {
      margin-top: 0;
    }
  }

  h2 {
    color: $bodySubTitleTextColor;
    margin-top: 1.5em;
    font-size: $bodySubTitleFontSize;

    &:first-child {
      margin-top: 8px;
    }
  }

  a {
    color: $bodyAnchorColor;
    text-decoration: underline;

    &:hover {
      color: $bodyAnchorColorHover;
    }
  }

  img {
    max-width: 100%;
    display: block;
  }

  ul {
    margin-top: 22px;
    padding-left: 35px
    list-style: outside disc;
  }

  ol {
    margin-top: 22px;
    padding-left: 38px
    list-style: outside decimal;
  }

  li {
    line-height: 1.7em;
  }

  time {
    color: #999;
    display: block;
    font-size: $bodyFontSize - 1px;
    padding-top: 2px;
  }

  .moreArticles {
    margin-top: 3em;
  }

  article {
    h1 {
      margin-top: 20px;
    }
  }

  #articles {
    margin-top: 11px;
    padding: 0;
    list-style: none;

    li {
      margin-bottom: 22px;
      &:last-child {
        margin-bottom: 0;
      }
    }

    time {
      float: left;
      color: #757575;
      padding-top: 1px;
    }

    a {
      display: block;
      margin-left: 110px;
    }

    p {
      margin-top: 0;
      margin-left: 110px;
    }
  }
}

footer {
  .copyright {
    color: #999;
    border-top: 1px solid #eaeaea;
    font-size: 13px;
    padding-top: 28px;
    padding-bottom: 30px;
  }
}

/* Any device width smaller than an iPad mini */
@media screen and (max-width: 767px) {
  $bodyFontSize = 14px;
  $bodyTitleFontSize = 30px;
  $bodySubTitleFontSize = 21px;
  $codeFontSize = 11px;

  body {
    font-size: $bodyFontSize;
  }

  .central-content {
    padding: 0 15px;
  }

  header {
    padding-top: 17px;

    h1 {
      font-size: 58px;
    }

    h2 {
      font-size: 26px;
    }

    li {
      font-size: 12px;
      margin-right: 24px;
    }
  }

  section#main {
    margin-top: 45px;

    h1 {
      font-size: $bodyTitleFontSize;
      margin-top: 45px;
    }

    h2 {
      font-size: $bodySubTitleFontSize;
    }

    time {
      font-size: $bodyFontSize - 1px;
    }
  }

  code {
    font-size: $codeFontSize;
  }
}
