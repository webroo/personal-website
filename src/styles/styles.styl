@import 'nib';

global-reset();
reset-html5();

html {
  min-width: 1024px;
  -webkit-text-size-adjust: 100%;
}

body {
  font-family: Helvetica, Arial, sans-serif;
  font-size: 14px;
  color: #444;
  width: 950px;
  margin: 0 auto;
}

h1, h2 {
  font-family: Dosis, Helvetica, Arial, sans-serif;
  color: #000;
}

h3 {
  font-family: Helvetica, Arial, sans-serif;
  font-size: 12px;
  text-transform: uppercase;
  color: #666;
}

p {
  line-height: 23px;
  margin-top: 22px;
}

a {
  color: #757575;
  &:hover {
    color: #ff3399;
  }
}

blockquote {
  font-family: Georgia;
  font-style: italic;
  margin-left: 20px;
}

strong {
  font-weight: bold;
}

em {
  font-style: italic;
}

hr {
  margin: 30px 0;
  height: 1px;
  border: none;
  background: #eaeaea;
}

header {
  margin-top: 40px;

  h1 {
    font-size: 64px;
  }

  nav {
    border-top: 1px solid #eaeaea;
    border-bottom: 1px solid #eaeaea;
    line-height: 42px;
    margin-top: 20px;

    li {
      display: inline-block;
      margin-right: 30px;
    }

    a {
      color: #5e5e5e;
      font-size: 12px;
      text-decoration: none;
      text-transform: uppercase;
    }
  }
}

#main {
  clearfix();
  margin-top: 40px;
  margin-bottom: 52px;
}

#content {
  float: left;
  width: 640px;

  h1 {
    font-size: 32px;
  }

  h2 {
    margin-top: 35px;
    font-size: 22px;

    &:first-child {
      margin-top: 8px;
    }
  }

  img {
    max-width: @width;
    padding-top: 5px;
  }

  ul {
    margin-top: 22px;
    padding-left: 35px
    list-style: outside disc;
  }

  ol {
    margin-top: 22px;
    padding-left: 38px
    list-style: outside decimal;
  }

  li {
    line-height: 24px;
    color: #444;
  }

  time {
    display: block;
    margin-top: 27px;
    font-size: 13px;
    color: #999;
  }

  #articles {
    margin-top: 11px;
    padding: 0;
    list-style: none;

    li {
      margin-bottom: 22px;
      &:last-child {
        margin-bottom: 0;
      }
    }

    time {
      float: left;
      font-size: 12px;
      color: #757575;
      margin-top: 0;
      padding-top: 1px;
    }

    a {
      display: block;
      margin-left: 110px;
    }

    p {
      margin-top: 0;
      margin-left: 110px;
    }
  }
}

#side {
  float: right;
  width: 255px;
  padding-top: 18px;

  nav {
    margin-bottom: 50px;
  }

  h3 {
    margin-bottom: 26px;
  }

  li {
    margin-top: 8px;
    font-size: 13px;
    line-height: 18px;
  }
}

footer {
  padding-top: 28px;
  padding-bottom: 30px;
  border-top: 1px solid #eaeaea;
  color: #999;
  font-size: 13px;
}

pre {
  margin-top: 22px;
}

code {
  font-family: Consolas, Courier, monospace;
  font-size: 13px;
  margin: 0 2px;
  padding: 0px 5px;
  border: 1px solid #eaeaea;
  border-radius: 3px;
  background-color: #f8f8f8;
}

